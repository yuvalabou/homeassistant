---

- platform: steam_online
  api_key: !secret steam_api
  accounts:
    - 76561198173612681

- platform: history_stats
  name: "Track Steam playtime"
  entity_id: binary_sensor.steam_playing
  state: 'on'
  type: time
  start: >-
    {{ now().replace(hour=0).replace(minute=0).replace(second=0) }}
  end: >-
    {{ now() }}
