---

- alias: "Lights - Turn on kids sleeping lights"
  id: a49ca9f8-c78a-4983-8293-ca97300b570e
  trigger:
    platform: time
    at: '19:00:00'
  condition: "{{ is_state('group.person', 'on') }}"
  action:
    - service: light.turn_on
      data:
        entity_id: light.kids_ambient_lights
        effect: 'Aurora'

- alias: "Lights - Turn off kids ambient lights at the morning"
  id: 5173eb35-3430-4685-9d81-840831adcfdd
  trigger:
    platform: time
    at: '07:30:00'
  action:
    service: light.turn_off
    data:
      entity_id: light.kids_ambient_lights
