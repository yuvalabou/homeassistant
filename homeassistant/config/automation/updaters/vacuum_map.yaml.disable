---

- alias: "Vacuum - Map camera"
  id: f9372f4e-0d4f-4004-823a-061d32d7cb74
  trigger:
    - platform: state
      entity_id: vacuum.mi_vacuum
      to: 'cleaning'
    - platform: state
      entity_id: vacuum.mi_vacuum
      to: 'docked'
  action:
    - choose:
      - conditions:
          - "{{ is_state('vacuum.mi_vacuum', 'cleaning') }}"
        sequence:
          - service: camera.turn_on
            target:
              entity_id: camera.vacuum_map
      - conditions:
          - "{{ is_state('vacuum.mi_vacuum', 'docked') }}"
        sequence:
          - delay:
              minutes: 5
          - service: camera.turn_off
            target:
              entity_id: camera.vacuum_map
